{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cerebras-maker",
  "version": "0.1.0",
  "identifier": "com.steve-business.cerebras-maker",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Cerebras MAKER",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "cli": {
      "description": "Cerebras MAKER - Autonomous Coding System",
      "args": [
        {
          "name": "headless",
          "short": "H",
          "description": "Run in headless mode (no GUI)",
          "takesValue": false
        },
        {
          "name": "prd",
          "short": "p",
          "description": "Path to PRD file to process",
          "takesValue": true
        },
        {
          "name": "workspace",
          "short": "w",
          "description": "Workspace directory",
          "takesValue": true
        },
        {
          "name": "script",
          "short": "s",
          "description": "Rhai script to execute directly",
          "takesValue": true
        }
      ],
      "subcommands": {
        "run": {
          "description": "Run MAKER on a PRD",
          "args": [
            {
              "name": "file",
              "description": "PRD file path",
              "takesValue": true,
              "required": true
            }
          ]
        },
        "exec": {
          "description": "Execute a Rhai script directly",
          "args": [
            {
              "name": "script",
              "description": "Rhai script file path",
              "takesValue": true,
              "required": true
            }
          ]
        }
      }
    },
    "updater": {
      "pubkey": "",
      "endpoints": []
    },
    "shell": {
      "open": true
    },
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}
